{
  "name": "ethereum-tcr-api",
  "private": true,
  "version": "0.3.7",
  "description": "API for Ethereum Token Curated Registries",
  "main": "lib/tcr.js",
  "scripts": {
    "build": "webpack --env dev && webpack --env build && npm run test",
    "dev": "webpack --progress --colors --watch --env dev",
    "test": "mocha --require babel-core/register --require babel-polyfill --colors --timeout 10000 ./test/*.spec.js",
    "test:watch": "mocha --require babel-core/register --require babel-polyfill --timeout 25000 --colors -w ./test/*.spec.js"
  },
  "keywords": [
    "tcr",
    "ethereum",
    "web3"
  ],
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.13.1",
    "eslint-loader": "^1.9.0",
    "mocha": "^4.0.1",
    "webpack": "^3.10.0",
    "yargs": "^10.0.3",
    "web3": "^1.0.0-beta.27"
  },
  "dependencies": {
    "web3-utils": "^1.0.0-beta.27"
  }
}
